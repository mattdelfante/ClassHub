<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.delware.classhub">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="ClassHubDB.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.delware.classhub.DatabaseObjs.ClassModel, com.delware.classhub.DatabaseObjs.AssignmentModel, com.delware.classhub.DatabaseObjs.AudioRecordingModel" />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="com.delware.classhub.DatabaseTypeSerializers.UtilDateSerializer" />

        <activity android:name=".Activities.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ClassActivity" />
        <activity android:name=".Activities.ViewAssignmentsActivity" />
        <activity android:name=".Activities.AudioRecordingsActivity" />
        <activity android:name=".Activities.RecordAudioActivity" />
        <activity android:name=".Activities.ViewAudioRecordingsActivity"></activity>
    </application>

</manifest>