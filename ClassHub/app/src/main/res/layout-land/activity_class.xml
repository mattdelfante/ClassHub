<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classActivityMainPercentRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delware.classhub.Activities.ClassActivity">

    <Button
        android:id="@+id/addAssignmentButton"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:text="Add an Assignment"
        android:textAllCaps="false"
        android:onClick="showAddAssignmentDialog"
        android:textSize="20sp" />

    <Button
        android:id="@+id/viewAssignmentButton"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="20%"
        android:text="View All Assignments"
        android:onClick="goToViewAssignmentsActivity"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/audioRecordingButton"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="40%"
        android:text="Audio Recordings"
        android:onClick="goToAudioRecordingsActivity"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/videoRecordingButton"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="60%"
        android:text="Video Recordings"
        android:onClick="goToVideoRecordingsActivity"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/notesButton"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="80%"
        android:text="Notes"
        android:onClick="goToNotesActivity"
        android:textAllCaps="false"
        android:textSize="20sp" />

</android.support.percent.PercentRelativeLayout>