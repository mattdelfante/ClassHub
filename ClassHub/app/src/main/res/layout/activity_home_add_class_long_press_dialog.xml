<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/longPressAddClassDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longPressAddClassTitle"
        android:text="Options"
        android:textColor="@color/black"
        app:layout_marginLeftPercent="38%"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/retrieveArchivedClassesButton"
        app:layout_widthPercent="100%"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Retrieve Archived Classes"
        android:layout_below="@+id/longPressAddClassTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/cancelLongPressButton"
        app:layout_widthPercent="100%"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Cancel"
        android:layout_below="@+id/retrieveArchivedClassesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</android.support.percent.PercentRelativeLayout>