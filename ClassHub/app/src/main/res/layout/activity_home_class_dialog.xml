<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityHomeClassDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delware.classhub.Activities.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/optionsText"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Options"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/renameClassText"
        android:text="Rename Class:"
        android:textColor="@color/black"
        app:layout_marginLeftPercent="1%"
        android:layout_below="@+id/optionsText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/renameClassInput"
        app:layout_widthPercent="100%"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_below="@+id/renameClassText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/archiveClassButton"
        app:layout_widthPercent="100%"
        android:layout_height="wrap_content"
        android:text="Archive the Class"
        android:textAllCaps="false"
        android:layout_below="@+id/renameClassInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/deleteClassButton"
        app:layout_widthPercent="100%"
        android:layout_height="wrap_content"
        android:text="Delete the Class"
        android:textAllCaps="false"
        android:layout_below="@+id/archiveClassButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/classCancelButton"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAllCaps="false"
        android:layout_below="@+id/deleteClassButton"/>

    <Button
        android:id="@+id/classDoneButton"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:text="Done"
        android:enabled="false"
        app:layout_marginLeftPercent="50%"
        android:textAllCaps="false"
        android:layout_below="@+id/deleteClassButton"/>

</android.support.percent.PercentRelativeLayout>