<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playAudioRecordingActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delware.classhub.Activities.PlayAudioRecordingActivity">

    <pl.droidsonroids.gif.GifImageView
        app:layout_widthPercent="100%"
        app:layout_heightPercent="30%"
        android:id="@+id/playbackAudioGif"
        app:layout_marginTopPercent="20%"/>

    <SeekBar
        android:id="@+id/audioRecordingSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="75%" />

    <Button
        android:id="@+id/pauseContinueAudioPlayBackButton"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="15%"
        android:text="Pause"
        android:textSize="20sp"
        app:layout_marginTopPercent="5%"
        android:textAllCaps="false"
        android:onClick="pauseContinueAudioPlayBackHandler"
        android:layout_below="@+id/audioRecordingSeekBar"/>

    <Button
        android:id="@+id/stopAudioPlayBackButton"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="15%"
        android:text="Stop"
        android:textSize="20sp"
        android:textAllCaps="false"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="50%"
        android:onClick="stopAudioPlayBackButtonHandler"
        android:layout_below="@+id/audioRecordingSeekBar" />
</android.support.percent.PercentRelativeLayout>
