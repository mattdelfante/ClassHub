<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recordAudioActivityPercentRelativeLayout"
    tools:context="com.delware.classhub.Activities.RecordAudioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerValue"
        android:text="00:00:00"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="5%"
        />

    <pl.droidsonroids.gif.GifImageView
        app:layout_widthPercent="100%"
        app:layout_heightPercent="30%"
        android:id="@+id/recordAudioGif"
        app:layout_marginTopPercent="30%"/>

    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="80%"
        android:text="Pause Recording"
        android:textSize="20sp"
        android:id="@+id/pauseContinueAudioRecordingButton"
        android:onClick="pauseContinueAudioRecordingHandler"
        android:textAllCaps="false" />

    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="50%"
        android:text="Finish Recording"
        android:textSize="20sp"
        android:id="@+id/finishAudioRecordingButton"
        android:onClick="finishAudioRecording"
        android:textAllCaps="false" />
</android.support.percent.PercentRelativeLayout>
